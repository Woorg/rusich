.carousel
	.bx-prev
		position absolute
		top 50%
		left -60px
		margin-top -24px
		sprite($left_arrow)
		hide-text()
		cursor pointer
		z-index 1
		&:hover
			sprite($left_arrow_hover)

	.bx-next
		position absolute
		top 50%
		right -60px
		margin-top -24px
		sprite($right_arrow)
		hide-text()
		cursor pointer
		z-index 1
		&:hover
			sprite($right_arrow_hover)











