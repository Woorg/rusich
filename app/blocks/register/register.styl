.register
	margin-bottom 44px
	clearfix()
	.title
		margin-bottom 46px
	&__form
		float left
		width 430px
		clearfix()
	&__input-w
		margin-bottom 15px
		width 430px
		background-color $color-gray-light
		letter-spacing tracking(75)

		clearfix()
	&__input
		border none
		padding 22px 24px 22px
		float right
		width 330px
		height 60px
		background transparent
		font-family $roboto-bld
		font-size 18px
		line-height 1
		text-transform uppercase
		color #000
		text-align right
		letter-spacing tracking(75)
		+placeholder()
			color #000
		&.error
			border 1px solid red
	&__label
		padding 24px 24px 24px
		float left
		width 100px
		font-family $roboto-bld
		font-size 13px
		line-height 1
		text-transform uppercase
		color #676767
		cursor pointer
	&__input-w_pass
		.register__input,
		.register__label
			width 200px

	&__captcha
		margin-bottom 10px


.social-login
	border 1px solid #878787
	margin-left 30px
	padding 30px 30px 30px
	float left
	width 382px
	min-height 124px
	text-align center
	&__title
		margin-bottom 22px
		font-family $roboto-bld
		font-size 13px
		font-weight normal
		line-height 16px
		text-transform uppercase
		color #202020
		letter-spacing tracking(75)

	&__links
		white-space nowrap
		clearfix()
		text-align center
	&__link
		display inline-block
		vertical-align top
		margin-left 6px
		hide-text()
		&:first-child
			margin-left 0
		&_fb
			sprite($enter_fb_big)
		&_vk
			sprite($enter_vk_big)
		&_inst
			sprite($enter_inst_big)
		&_ok
			sprite($enter_ok_big)
		&_gplus
			sprite($enter_gplus_big)
		&_youtube
			sprite($enter_youtube_big)






