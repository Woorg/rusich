.main
	&__top
		position relative
		clearfix()
	&_contacts
		.main__top
			position relative
			margin-bottom 22px
			padding-top 32px
			padding-left 0
			padding-right 0
			width 100%
			height 148px
			background url('../images/general/contacts-image.jpg') 50% 0 no-repeat
			background-size 100% 148px
		.main__in
			padding-top 0
			padding-left 80px
			padding-bottom 0
			min-height auto

.info
	border-top 1px solid #ececec
	// margin-top 24px
	&__in
		@extend .in
		padding-top 32px
		padding-left 85px
		padding-bottom 28px
		padding-right 85px
	&__title
		margin-bottom 28px
		font-family $roboto-regular
		font-size 24px
		font-weight normal
		line-height 26px
		color #353535
	&__w
		clearfix()
	&__item
		position relative
		padding-top 3px
		float left
		font-family $roboto-regular
		font-size 18px
		line-height 36px
		color #353535
		letter-spacing tracking(75)
		a
			color #353535
			text-decoration none
		&:before
			position absolute
			top 4px
			left 0
			content ''
	&__item_address
		margin-right 100px
		width 332px
		&:before
			left -52px
			sprite($address_icon)
		&:hover
			&:before
				sprite($address_icon_hover)
	&__item_phone
		width 270px
		&:before
			left -57px
			sprite($phone_icon)
		&:hover
			&:before
				sprite($phone_icon_hover)
	&__item_email
		width 232px
		&:before
			top 8px
			left -46px
			sprite($mail_icon)
		&:hover
			&:before
				sprite($mail_icon_hover)



.main
	&__map
		width 100%
		height 460px
	&__bottom
		position relative
		padding-top 24px
		padding-left 50px
		padding-right 50px
		@extend .in
		clearfix()

.contact-us
	border 1px solid #CECECE
	margin-bottom 30px
	padding-top 26px
	padding-left 33px
	padding-right 33px
	padding-bottom 20px
	width 700px
	&__title
		margin-bottom 40px
		font-family $roboto-bld
		font-size 24px
		line-height 26px
		text-transform uppercase
		color #3a3a3a
		letter-spacing tracking(75)
	&__row
		clearfix()
	&__col
		margin-right 28px
		float left
		width 300px
		&:nth-child(2n)
			margin-right 0
	&__input
		border none
		margin-bottom 15px
		padding 18px 24px 24px
		width 300px
		size 300px 60px
		background-color $color-gray-light
		font-family $roboto-bld
		font-size 13px
		line-height 1
		text-transform uppercase
		color #676767
		&.error
			border 1px solid red
	&__textarea
		border none
		padding 20px 24px 24px
		size 300px 132px
		background-color $color-gray-light
		font-family $roboto-bld
		font-size 13px
		line-height 1
		text-transform uppercase
		color #676767
		&.error
			border 1px solid red
	&__submit-w
		text-align center
	// &__submit

.subscribe-main
	padding-left 40px
	padding-right 34px
	&__form
		font-size 0
		clearfix()
	&__label,
	&__w
		display inline-block
		vertical-align top
	&__label
		margin-right 30px
		font-family $roboto-bld
		font-size 18px
		text-transform uppercase
		line-height 60px
		color #9c9c9c
		letter-spacing tracking(75)
	&__input
		border none
		padding 20px 24px 24px
		size 300px 60px
		background-color $color-gray-light
		font-family $roboto-bld
		font-size 13px
		line-height 1
		text-transform uppercase
		color #676767
		&.error
			border 1px solid red
	&__w
		position relative
	&__submit
		position absolute
		top 15px
		right 15px
		border none
		background-color transparent
		sprite($subscribe)
		hide-text()
.content
	margin-right 44px
	width 700px
	float left

.side
	width 300px
	float left

.widget
	margin-bottom 15px
	width 300px





