.footer
	background-color #313b40

	&__in
		@extend .in
		padding-top 40px
		padding-left 85px
		padding-right 85px
		padding-bottom 50px
		color #fff
	&__top
		clearfix()
		font-size 0
	&__body
		margin-bottom 16px
		clearfix()
	&__bottom
		clearfix()
	&__logo,
	&__menu,
	&__social,
	&__subscribe,
	&__contacts,
	&__payments
		display inline-block
		vertical-align top
	&__logo
		margin-left -30px
		width 166px
	&__menu
		width 764px
	&__social
		width 130px
	&__subscribe
		width 302px
	&__contacts
		padding-top 20px
		width 490px
		font-size 0
	&__payments
		width 230px
	&__copyright
		float left
		font-size 14px
	&__created-by
		float right
		font-size 14px
		line-height 1
		text-decoration underline
		color #fff
		&:hover
			text-decoration none
	&_second
		.footer__top
			margin-bottom 20px

.menu_second

	&__list
		font-size 0
	&__item
		display inline-block
		vertical-align top
	&__link
		font-size 12px
		line-height 1
		color #fff

.subscribe
	padding-right 26px
	&__title
		margin-bottom 15px
		padding-left 17px
		font-size 12px
		font-style italic
		line-height 1
		color #fff
	&__form
		clearfix()
		font-size 0
		white-space nowrap
	&__input
		border none
		padding-right 20px
		padding-left 20px
		width 200px
		height 40px
		background #747b7f
		font-size 12px
		line-height 1
		color #fff
		+placeholder()
			color #fff
		&.error
			border 1px solid red
	&__submit
		border none
		padding-right 10px
		padding-left 12px
		height 40px
		background-color #00a2ff
		font-size 12px
		line-height 1
		color #fff

.address
	position relative
	padding-left 74px
	padding-right 30px
	width 250px
	display inline-block
	vertical-align top
	&:before
		position absolute
		top 0
		left 42px
		content ''
		sprite($location_icon)
	&__text
		font-size 18px
		line-height 20px
		color #fff

.payments
	margin-top -8px
	&__title
		margin-bottom 20px
		font-size 12px
		color #fff
	&__w
		clearfix()
	&__item
		margin-right 20px
		margin-bottom 16px
		display inline-block
		vertical-align top
		hide-text()
		&:nth-child(2n)
			margin-right 0
	&__item_visamaster
		sprite($visa_mastercard)
	&__item_alfa
		sprite($alfabank)
	&__item_webmoney
		sprite($webmoney)


.popup
	position relative
	margin auto
	padding-top 32px
	padding-right 36px
	padding-left 30px
	padding-bottom 26px
	size 327px 290px
	background-color #00a2ff
	box-shadow 4px 7px 46px rgba(0, 0, 0, .54)
	&__title
		margin-bottom 22px
		font-family $roboto-bld
		font-size 13px
		line-height 1
		text-transform uppercase
		text-align center
		color #fff
		letter-spacing tracking(75)
	&__input
		border none
		margin-bottom 20px
		padding-left 28px
		padding-right 28px
		size 261px 58px
		background-color #fff
		font-family $roboto-bld
		font-size 12px
		line-height 1
		text-transform uppercase
		color #676767
		+placeholder()
			color #676767
		&.error
			border 1px solid red
	&__submit
		border 1px solid #fff
		padding-top 19px
		padding-right 30px
		padding-left 23px
		padding-bottom 16px
		background transparent
		font-family $roboto-bld
		font-size 13px
		line-height 1
		text-transform uppercase
		letter-spacing tracking(75)
		color #fff


.popup-order
	position relative
	margin auto
	padding-top 77px
	padding-bottom 80px
	width 708px
	min-height 300px
	background-color #fff
	color #202020
	text-align center
	letter-spacing tracking(75)
	box-shadow 1px 1px 29px rgba(0, 0, 0, .13)
	&__title
		margin-bottom 40px
		font-family $roboto-thin
		font-size 31px
		font-weight 100
		line-height 1
		text-transform uppercase
	&__text
		margin-bottom 22px
		font-family $roboto-bld
		font-size 21px
		line-height 1
		text-transform uppercase
		span
			color #00a2ff
	&__note
		font-size 14px
		line-height 16px



.order-popup
	.mfp-content
		background-color #000
		box-shadow 1px 1px 73px rgba(0, 0, 0, .58)

	button.mfp-close
		position absolute
		top 10px
		right 10px
		sprite($order_popup_close)
		opacity 1
		z-index 1
		hide-text()


.image-popup,
.video-popup
	&.mfp-bg
		background rgba(0,0,0,.35)
		cursor pointer
	.mfp-arrow
		&:before
			border none

	button.mfp-close
		position absolute
		top -26px
		right -26px
		sprite($cross_symbol)
		hide-text()
		opacity 1
		z-index 1

	img.mfp-img
		padding 0
		background-color #000
		box-shadow 1px 1px 73px rgba(0, 0, 0, .58)

	.mfp-zoom-out-cur
		.mfp-image-holder
			.mfp-close
				cursor pointer

.video-popup
	.mfp-content
		background-color #000
		box-shadow 1px 1px 73px rgba(0, 0, 0, .58)
		&:after
			position absolute
			top 50%
			left 50%
			content ""
			margin-top -42px
			margin-left -20px
			sprite($video_play_bg)


.order-popup
	.mfp-content
		background-color #000
		box-shadow 1px 1px 73px rgba(0, 0, 0, .58)
		.mfp-close
			top 10px
			right 10px
			sprite($order_popup_close)
			opacity 1
			z-index 1
			hide-text()

