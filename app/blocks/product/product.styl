		line-height 30px
	&__size
		font-family $roboto-regular
		font-size 18px
		line-height 30px
		color #00a2ff

.menu-side
	&__menu-list
			padding-top 10px

	&__menu-item
		border-bottom 1px solid #ACACAC
		background-color $color-gray-light
		&_active
			.sub-menu
				display block
		.ui-accordion-header-active
			font-family $roboto-med
	&__menu-link
		position relative
		padding-top 18px
		padding-right 60px
		padding-bottom 22px
		padding-left 28px
		display block
		text-decoration none
		font-size 14px
		line-height 16px
		text-transform uppercase
		color #000
		letter-spacing tracking(75)
	&__menu-icon
		position absolute
		top 20px
		right 40px
		content ''
		sprite($accordeon_icon)
		&_active
			sprite($accordeon_icon_down)

