.breadcrumbs
	margin-bottom 20px
	display block
	&__list
		clearfix()
	&__item
		position relative
		margin-right 8px
		float left
		&:after
			position absolute
			top 4px
			right 0
			content '>'
			font-size 12px
			color #989590
			line-height 1
		&:last-child
			&:after
				display none
	&__link
		padding-right 15px
		font-size 12px
		color #989590
		line-height 1
		text-decoration underline
		letter-spacing tracking(75)
		&:hover
			text-decoration none
	&__link_last
		text-decoration none

	&_product
		float left

	&_articles
		margin-bottom 30px



