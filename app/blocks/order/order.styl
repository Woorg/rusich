.order
	padding-bottom 38px
	.title
		margin-bottom 46px
	&__item
		margin-bottom 0
	&__item-top
		margin-bottom 40px
		clearfix()
	&__number
		float left
		font-family $roboto-lght
		font-size 18px
		font-weight 300
		line-height 1
		text-transform uppercase
		color #272727
		letter-spacing tracking(75)
		span
			padding-left 10px
			font-family $roboto-black
			font-size 18px
			line-height 1
			text-transform uppercase
			color #00a2ff
	&__amount
		margin-left 22px
		float left
		font-family $roboto-lght
		font-size 18px
		font-weight 300
		line-height 1
		font-weight 100
		text-transform uppercase
		color #272727
		letter-spacing tracking(75)
		span
			padding-left 10px
			font-family $roboto-med
			font-size 18px
			line-height 1
			text-transform uppercase
			color #4e4e4e
	&__details
		margin-bottom 12px
		clearfix()
	&__details-sep
		padding-left 13px
		padding-right 13px
		line-height 60px
		float left
	&__input-w
		float left
	&__input
		padding 24px 24px 24px
		border none
		size 275px 60px
		background-color $color-gray-light
		font-family $roboto-bld
		font-size 13px
		font-weight 700
		line-height 6px
		text-transform uppercase
		color #676767
		+placeholder()
			color #676767
		&.error
			border 1px solid red
		&_style-first
			width 259px
		&_style-second
			width 275px
		&_style-third
			width 310px
.payment-variant
	margin-bottom 48px
	padding-top 20px
	width 430px
	&__title
		border-bottom 1px solid #CDCDCD
		margin-bottom 20px
		padding-bottom 20px
		padding-left 26px
		font-family $roboto-lght
		font-size 12px
		text-transform uppercase
		color #626262

.radio-w
	margin-bottom 27px
	padding-left 20px
	clearfix()
	&__radio
		display none
	&__radio-label
		position relative
		padding-left 30px
		font-size 13px
		line-height 1
		color #353535
		cursor pointer
		span
			font-family $roboto-bld
		&:before
			position absolute
			top 1px
			left -2px
			content ''
			border 1px solid #595959
			size 15px
			background-color #fff
			border-radius 50%
	&__radio-note
		font-size 13px
		color #c70909
	&__radio:checked + label
		&:before
			border 1px solid #00a2ff
		&:after
			position absolute
			top 4px
			left 1px
			content ''
			size 9px
			background-color #00a2ff
			border 1px solid #00a2ff
			border-radius 50%

.delivery-variant
	padding-top 10px
	padding-bottom 26px
	&__title
		border-bottom 1px solid #CDCDCD
		margin-bottom 22px
		padding-bottom 20px
		padding-left 26px
		width 430px
		font-family $roboto-lght
		font-size 12px
		text-transform uppercase
		color #626262
	.radio-w__radio-label
		padding-left 34px

.delivery-service
	padding-top 10px
	padding-left 32px
	padding-bottom 8px
	clearfix()
	&__item
		position relative
		float left
		height 72px
		&_deliv-1
			width 184px
			.delivery-service__item-icon
				margin-top 15px
				margin-left 2px
				sprite($delivery_1)
		&_deliv-2
			width 124px
			.delivery-service__item-icon
				margin-top 7px
				margin-left 1px
				sprite($delivery_2)
		&_deliv-3
			width 70px
			overflow hidden
			.delivery-service__item-icon
				margin-left -34px
				sprite($delivery_3)
			.delivery-service__checkbox-label
				&:before
					left 22px
			.delivery-service__checkbox:checked + label
				&:after
					left 22px

		&_deliv-4
			width 90px
			.delivery-service__item-icon
				margin-top 4px
				margin-left 3px
				sprite($delivery_4)

	&__checkbox
		display none
	&__checkbox-label
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display block
		cursor pointer
		hide-text()
		&:before
			position absolute
			bottom 0
			left 2px
			content ''
			size 12px
			background-color #fff
			border 1px solid #9d9d9d

	&__checkbox:checked + label
		&:after
			position absolute
			bottom 1px
			left 3px
			content ''
			sprite($checkbox_small)



